<div class='main'>
  <div class='user_name'><%= "#{current_user.nickname}の購入履歴" %></div>
  <% @orders.each do |order| %>
    <div class="search_order">
      <%= link_to order.group, order_path(order.id), class: "show_btn" %>
      <div class="search_content_name">
        <% if order.content_name.present? %>
          <%= "商品名：#{order.content_name}" %>
        <% end %>
      </div>
      <div class="search_event_name">
        <% if order.event_name.present? %>
          <%= "公演名：#{order.event_name}" %>
        <% end %>
      </div>
      <div class="order_user">共同購入者：
      <% order.order_users.each do |order_user| %>
        <%= order_user.user.nickname %>
      <% end %>
      </div>
      <%= link_to "削除", order_path(order.id), data: {turbo_method: :delete}, class: "search-destroy" %>
    </div>
  <% end %>
</div>